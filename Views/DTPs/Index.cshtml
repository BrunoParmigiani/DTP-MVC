@model IEnumerable<DTP.Models.DTPs>

@{
    ViewData["Title"] = "DTPs";
}

<h2>@ViewData["Title"]</h2>

<hr />

<table class="table table-striped table-hover bg-light">
    <tr>
        <th>DTP</th>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
    </tr>
    @foreach (var item in Model)
    {
        var dtpNumber = item.Number;
        string pageLink = $"https://dataprevrj.sharepoint.com/sites/DIPD/SitePages/DTP.{dtpNumber}.aspx";
        <tr>
            <td>
                <a href="@pageLink" target="_blank">
                    DTP.@Html.DisplayFor(modelItem => item.Number)
                </a>
            </td>
            <td>DM.@Html.DisplayFor(modelItem => item.DM) - @Html.DisplayFor(modelItem => item.Name)</td>
        </tr>
    }
</table>