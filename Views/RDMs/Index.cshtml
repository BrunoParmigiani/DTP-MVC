@model DTP.Models.ViewModels.RDMsViewModel;

@{
    ViewData["Title"] = "RDMs";
}

<h1>@ViewData["Title"]</h1>
<hr />
<br />

<table class="table table-striped table-hover bg-light">

    <tr>
        <th>Id</th>
        <th>Number</th>
        <th>Ticket</th>
        <th>Required To</th>
    </tr>

    @foreach (var item in Model.ParentRDMs)
    {

        <tr>
            <td>@item.Id</td>
            <td>@item.Number</td>
            <td>@item.Ticket</td>
            <td>@item.RequiredTo</td>
        </tr>

    }
</table>

<table class="table table-striped table-hover bg-light">

    <tr>
        <th>Id</th>
        <th>Number</th>
        <th>Ticket</th>
        <th>Required To</th>
    </tr>


    @foreach (var item in Model.ChildrenRDMs)
    {

        <tr>
            <td>@item.Id</td>
            <td>@item.Number</td>
            <td>@item.Ticket</td>
            <td>@item.RequiredTo</td>
        </tr>

    }
</table>